<div id="form_contact">
  <%= form_for(@contact_form, :remote => true) do  |f| %>
    <% if @contact_form.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact_form.errors.count, "error") %> prohibited this contact_form from being saved:</h2>

        <ul>
        <% @contact_form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      
      <label>Nombre:</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>E-mail:</label>
      <%= f.text_field :personal_email %>
    </div>
    <div class="field">
      <label>Cargo:</label>
      <%= f.text_field :appointment %>
    </div>
    <div class="field">
      <label>Empresa:</label>
      <%= f.text_field :company %>
    </div>
    <h3>Sugiera el EJJE TOUR a tres de sus contactos:</h3> 
    <div class="field">
      <label>E-mail 1:</label>
      <%= f.text_field :email_1 %>
    </div>
    <div class="field">
      <label>E-mail 2:</label>
      <%= f.text_field :email_2 %>
    </div>
    <div class="field">
      <label>E-mail 3:</label>
      <%= f.text_field :email_3 %>
    </div>
    <div class="actions">
    <input type="submit" value="Enviar" id="send_email" onclick="wait_form(1,'send_email')">
      <%#= link_to "Enviar", "javascript:;", :id =>"send_email", :onclick => "wait_form(1,'send_email')"%>
    </div>
  <% end %>
</div>
