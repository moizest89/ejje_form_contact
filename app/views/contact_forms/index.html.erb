<div id="list_view">

<h1>Lista de Contactos</h1>

<table border="1" cellpadding="0" id="table_contact">
  <tr>
    <th class="no_border">Nombre</th>
    <th>E-mail</th>
    <th>Cargo</th>
    <th>Empresa</th>
    <th>Email 1</th>
    <th>Email 2</th>
    <th>Email 3</th>
    <th></th>
  </tr>

<% @contact_forms.each do |contact_form| %>
  <tr>
    <td><%= contact_form.name %></td>
    <td><%= contact_form.personal_email %></td>
    <td><%= contact_form.appointment %></td>
    <td><%= contact_form.company %></td>
    <td><%= contact_form.email_1 %></td>
    <td><%= contact_form.email_2 %></td>
    <td><%= contact_form.email_3 %></td>
    <td><%= link_to 'Mostrar', contact_form %>
    <%#= link_to 'Edit', edit_contact_form_path(contact_form) %>
    <%= link_to 'Eliminar', contact_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%#= link_to 'New Contact form', new_contact_form_path %>
</div>
