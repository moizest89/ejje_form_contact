<%if @error%>
	//console.log("<%= @contact_form.errors.inspect%>")
	$('input',"form#new_contact_form").removeClass("error")
	setTimeout(function() {
		<% @contact_form.errors.each do |msg,attr| %>
        	error_validate("<%= msg %>","<%= attr%>")
    	<% end %>	
    	wait_form(2,'send_email')
	}, 800);
	$('div#errors').html('<%=j render :partial => "show_errors", :object => @contact_form%>')
	//console.dir('<%=j @contact_form.errors.messages.values.inspect%>')
<%else%>
	$('div#Form-container').fadeOut(function(){
		$('div#confirmation_form').fadeIn();
	});
<%end%>